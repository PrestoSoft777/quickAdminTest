<h1>Home Page</h1>

<a href="/logout">logout</a>

<table>
    <thead>
        <tr>
            <th colspan=2>Users</th>
        </tr>
    </thead>
    <tbody>
        <% user.forEach((user) => { %>
            <tr>
                <td> <%= user.username %> </td>
                <td>
                    <form id="delete" action="/userlist/<%=user._id%>?_method=DELETE" method="POST">
                        <input type="submit" value="Delete">
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
